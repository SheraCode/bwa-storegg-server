<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Tambah Nominal</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <!-- /.card-header -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Nominal</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/create" method="post">
                  <div class="card-body">
                    <div class="form-group">
                        <label>Nama Koin</label>
                        <select class="form-control select2" style="width: 100%; height: 40px;" name="coinName" required>
                          <option selected="selected">Pilih Koin</option>
                          <option value="Gold">Gold</option>
                          <option value="Diamond">Diamond</option>
                          <option value="Jewel">Jewel</option>
                        </select>
                      </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Jumlah Koin</label>
                      <input type="number" class="form-control" id="coinQuantity" placeholder="Masukkan Jumlah Koin" name="coinQuantity">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Harga</label>
                        <input type="number" class="form-control" id="price" placeholder="Masukkan Harga" name="price">
                      </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary"><b>Simpan</b></button>
                    </div>
                </form>
              <!-- /.card-body -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>
