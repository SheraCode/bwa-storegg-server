<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
 
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Edit Payment</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <!-- /.card-header -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Edit Payment</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/payment/edit/<%= payment._id %>?_method=PUT"  method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Tipe</label>
                      <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Masukkan Tipe Pembayaran" name="type" value="<%= payment.type %>">
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select class="form-select" aria-label="Default select example" name="status">
                            <option selected>
                                <%if(payment.status === 'Y'){ %>
                                    Aktif
                               <% } else { %>
                                    Tidak Aktif
                            <% } %>
                            </option>
                            <option value="Y">Aktif</option>
                            <option value="N">Tidak Aktif</option>
                          </select>
                    </div>
                    <label>Bank</label>
                    <div class="select2-purple">
                        <select class="form-control select2" multiple="multiple" style="width: 100%; height: 40px;" name="Banks" required>
                          <% banks.forEach((bank) => { %>
                            <option value="<%= bank._id %>" <% payment.Banks.forEach((paymentBank) => { %>
                                <% if (bank._id.toString() === paymentBank._id.toString()) { %>selected<% } %>
                              <% }) %>>
                              <%= bank.name %>-<%= bank.nameBank %>-<%= bank.noRekening %>
                            </option>
                          <% }) %>
                        </select>
                      </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><b>Simpan</b></button>
                </div>
                </form>
              <!-- /.card-body -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>
